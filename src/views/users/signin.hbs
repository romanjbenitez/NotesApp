<div class="container">
  <div class="container d-flex justify-content-center">
    <div class="card text-center" style="width: 18rem;">
      <div class="card-header">
        <h1>Account Login</h1>
      </div>
      <div class="card-body">
        <form action="/users/signin" method="POST">
          <div class="mt-3">
            <input
              type="email"
              class="form-control"
              name="email"
              placeholder="Email"
              autofocus
            />
          </div>
          <div class="mt-3">
            <input
              type="password"
              class="form-control"
              name="password"
              placeholder="Password"
            />
          </div>
          <div class="mt-3">
            <button type="submit" class="btn btn-primary w-100">Login</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>