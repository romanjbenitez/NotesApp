<div class="row d-flex justify-content-center">
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        Account Register
      </div>
      <div class="card-body">
        <form action="/users/signup" method="POST">
          <div class="mt-3">
            <input
              type="text"
              class="form-control"
              name="name"
              placeholder="name"
              value="{{name}}"
            />
          </div>
          <div class="mt-3">
            <input
              type="email"
              class="form-control"
              name="email"
              placeholder="Email"
              value="{{email}}"
            />
          </div>
          <div class="mt-3">
            <input
              type="password"
              class="form-control"
              name="password"
              placeholder="Password"
            />
          </div>
          <div class="mt-3">
            <input
              type="password"
              class="form-control"
              name="password2"
              placeholder="Confirm Password"
            />
          </div>
          <div class="mt-3">
            <button type="submit" class="btn btn-primary w-100">
                SingUp
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>