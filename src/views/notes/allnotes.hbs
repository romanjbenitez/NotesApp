<div class="row">
  {{#each notes}}
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <h4
            class="card-title d-flex justify-content-between align-items-center"
          >
            {{title}}
            <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
          </h4>
          <p>{{description}}</p>
          <div class="d-grid gap-1">
            <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
              <input type="hidden" name="_method" value="DELETE" />
              <button class="btn btn-danger btn-sm w-100" type="submit">Delete</button></form>
          </div>
        </div>
      </div>
    </div>
  {{else}}
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <p class="lead">There are not notes yet.</p>
          <a href="/notes/add" class="btn btn-primary btn-lg">Create One!</a>
        </div>
      </div>
    </div>

  {{/each}}
</div>